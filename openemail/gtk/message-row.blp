using Gtk 4.0;
using Adw 1;

template ListItem {
  child: Box {
    Revealer {
      transition-type: crossfade;
      reveal-child: bind template.item as <$Message>.unread;

      child: Label {
        valign: start;
        margin-top: 6;
        label: "â€¢";

        styles [
          "accent",
        ]

        accessibility {
          label: _("Unread");
        }
      };
    }

    Box {
      margin-top: 12;
      margin-bottom: 12;
      margin-end: 6;
      spacing: 9;

      Adw.Avatar {
        valign: start;
        margin-top: 3;
        size: 32;
        text: bind template.item as <$Message>.name;
        custom-image: bind template.item as <$Message>.profile-image;
        show-initials: true;
      }

      Box {
        orientation: vertical;
        spacing: 3;

        Box {
          spacing: 6;

          Label {
            hexpand: true;
            halign: start;
            label: bind template.item as <$Message>.name;
            ellipsize: end;

            styles [
              "heading",
            ]
          }

          Label {
            halign: end;
            label: bind template.item as <$Message>.date;
            ellipsize: end;

            styles [
              "caption",
            ]
          }
        }

        Label {
          halign: start;
          label: bind template.item as <$Message>.subject;
          ellipsize: end;
          wrap: true;
          wrap-mode: word_char;
          lines: 2;

          styles [
            "caption-heading",
          ]
        }

        $MessageBody {
          sensitive: false;
          editable: false;
          text: bind template.item as <$Message>.body;
          summary: true;

          styles [
            "caption",
          ]
        }
      }
    }
  };
}
