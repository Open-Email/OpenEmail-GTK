using Gtk 4.0;
using Adw 1;

template $MailWindow: Adw.ApplicationWindow {
  title: _("OpenEmail");
  default-width: 1000;
  default-height: 600;

  content: Stack stack {
    transition-type: crossfade;

    $MailAuthView auth_view {
      authenticated => $_on_auth();
    }

    $MailContentView content_view {}
  };
}
