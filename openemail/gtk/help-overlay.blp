using Gtk 4.0;

ShortcutsWindow help_overlay {
  modal: true;

  ShortcutsSection {
    section-name: "shortcuts";
    max-height: 10;

    ShortcutsGroup {
      title: _("General");
      
      ShortcutsShortcut {
        title: _("Sync");
        accelerator: "<primary>r F5";
      }

      ShortcutsShortcut {
        title: _("Search");
        accelerator: "<primary>f";
      }

      ShortcutsShortcut {
        title: _("Undo");
        accelerator: "<primary>z";
      }

      ShortcutsShortcut {
        title: _("Preferences");
        action-name: "app.preferences";
      }

      ShortcutsShortcut {
        title: _("Keyboard Shortcuts");
        action-name: "win.show-help-overlay";
      }

      ShortcutsShortcut {
        title: _("Quit");
        action-name: "app.quit";
      }
    }

    ShortcutsGroup {
      title: _("Messages");

      ShortcutsShortcut {
        title: _("New Message");
        accelerator: "<primary>n";
      }

      ShortcutsShortcut {
        title: _("Delete Message");
        accelerator: "Delete";
      }
    }
    
    ShortcutsGroup {
      title: _("New Message");
    
      ShortcutsShortcut {
        title: _("Bold");
        accelerator: "<primary>b";
      }
    
      ShortcutsShortcut {
        title: _("Italic");
        accelerator: "<primary>i";
      }
    }

    ShortcutsGroup {
      title: _("Contacts");

      ShortcutsShortcut {
        title: _("New Contact");
        accelerator: "<primary>n";
      }

      ShortcutsShortcut {
        title: _("Remove Contact");
        accelerator: "Delete";
      }
    }
  }
}
