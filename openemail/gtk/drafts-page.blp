using Gtk 4.0;
using Adw 1;

template $DraftsPage: Adw.NavigationPage {
  title: _("Drafts");

  $ContentPage content {
    title: bind template.title;

    details: Adw.ToolbarView {
      [top]
      Adw.HeaderBar {
        show-title: false;
      }

      content: Adw.StatusPage {
        title: bind template.title;

        styles [
          "dim-label",
        ]
      };
    };

    toolbar-button: Button {
      icon-name: "trash-symbolic";
      tooltip-text: _("Delete All");
      clicked => $_delete_all();
    };

    empty-page: Adw.StatusPage {
      icon-name: "drafts-symbolic";
      title: _("No Drafts");
      description: _("Newly composed messages that werenâ€™t sent will appear here");
    };
  }
}
