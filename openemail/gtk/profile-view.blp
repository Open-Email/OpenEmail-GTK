using Gtk 4.0;
using Adw 1;

template $ProfileView: Adw.Bin {
  Adw.ToolbarView {
    [top]
    Adw.HeaderBar {
      show-title: false;

      [end]
      Button {
        visible: bind template.can-remove;
        icon-name: "trash-symbolic";
        tooltip-text: _("Remove Contact");
        clicked => $_remove_contact();

        ShortcutController {
          scope: managed;

          Shortcut {
            trigger: "Delete|KP_Delete";
            action: "activate";
          }
        }

        styles [
          "flat",
        ]
      }
    }

    content: Stack {
      visible-child-name: bind template.visible-child-name;

      StackPage {
        name: "empty";

        child: Adw.StatusPage {
          title: _("Select a Contact");

          styles [
            "dim-label",
          ]
        };
      }

      StackPage {
        name: "not-found";

        child: Adw.StatusPage {
          title: _("Profile Not Found");
          description: _("Couldnâ€™t get information about the selected user");
          icon-name: "about-symbolic";
        };
      }

      StackPage {
        name: "profile";

        child: Adw.PreferencesPage page {
          Adw.PreferencesGroup {
            Button {
              halign: center;

              Adw.Avatar {
                size: 128;
                text: bind template.name;
                custom-image: bind template.profile as <$Profile>.image;
                show-initials: true;
              }

              clicked => $_show_image_dialog();

              styles [
                "circular",
                "avatar-button",
              ]
            }
          }

          Adw.PreferencesGroup {
            Label {
              label: bind template.name;

              styles [
                "title-1",
              ]
            }

            Label {
              margin-top: 3;
              label: bind template.address;
            }

            Label {
              visible: bind template.away;
              margin-top: 9;
              halign: center;
              label: _("Away");

              styles [
                "caption",
                "away-label",
              ]
            }
          }
        };
      }
    };
  }
}

Adw.Dialog image_dialog {
  Overlay {
    [overlay]
    Adw.HeaderBar {
      valign: start;

      styles [
        "overlaid",
      ]
    }

    Gtk.Image {
      paintable: bind template.profile as <$Profile>.image;
      height-request: 360;
      width-request: 360;
    }
  }
}

Adw.AlertDialog confirm_remove_dialog {
  heading: _("Remove Contact?");
  body: _("You will not see messages from this person unless you add them to your address book again.");
  default-response: "remove";
  response => $_confirm_remove();

  responses [
    close: _("Cancel"),
    remove: _("Remove") destructive,
  ]
}
